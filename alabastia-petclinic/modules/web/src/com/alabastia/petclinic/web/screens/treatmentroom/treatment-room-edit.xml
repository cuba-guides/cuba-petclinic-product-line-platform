<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
  caption="msg://treatmentRoomEdit.caption"
  focusComponent="form"
  messagesPack="com.alabastia.petclinic.web.screens.treatmentroom">
  <data>
    <instance id="treatmentRoomDc"
      class="com.alabastia.petclinic.entity.TreatmentRoom">
      <view extends="_local"/>
      <loader/>
    </instance>
  </data>
  <dialogMode height="600"
    width="800"/>
  <layout expand="editActions" spacing="true">
    <form id="form" dataContainer="treatmentRoomDc">
      <column width="350px">
        <textField id="nameField" property="name"/>
        <textField id="roomNumberField" property="roomNumber"/>
      </column>
    </form>
    <hbox id="editActions" spacing="true">
      <button action="windowCommitAndClose"/>
      <button action="windowClose"/>
    </hbox>
  </layout>
</window>
